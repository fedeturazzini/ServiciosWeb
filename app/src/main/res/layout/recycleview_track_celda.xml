<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:elevation="6dp"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imagenCardView"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/songTitle"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Song title:"
                android:layout_toRightOf="@+id/imagenCardView"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/songTitle"
                android:layout_toRightOf="@+id/imagenCardView"
                android:layout_marginTop="2dp"
                android:text="TITULO TITULO TITULO TITULO TITULO TITULO TITULO"
                android:textSize="16sp"
                card_view:paddingStart="@dimen/cardview_compat_inset_shadow" />


            <TextView
                android:id="@+id/tituloID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id:"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/imagenCardView"
                android:layout_below="@id/textViewTitulo"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/numeroId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitulo"
                android:text="1"
                android:layout_toRightOf="@id/tituloID"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>