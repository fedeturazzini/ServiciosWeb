<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    tools:context="com.example.fedet.entregableserviciowebybasededatos.View.Fragments.FragmentDetailTrack">


    <ImageView
        android:id="@+id/imagenDetalleTrack"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:textSize="23dp"
        android:layout_below="@+id/imagenDetalleTrack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/titleIdDetail"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="titulo titulo titulo titulo titulo titulo titulo titulo titulo titulo titulo titulo titulo titulo titulo titulo "
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/idTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/titleIdDetail"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:id="@+id/idNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="23dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/idTitle"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/titleIdDetail"
        />

</RelativeLayout>
